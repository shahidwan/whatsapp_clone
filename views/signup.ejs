<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Signup - Chatter</title>
    <link rel="stylesheet" href="/signup-login.css" />
    <link rel="stylesheet" href="/navbar-footer.css" />
  </head>
  <body>
    <%- include("partials/navbar") %>

    <div class="auth-page">
      <div class="auth-card">
        <h1 class="auth-logo">ðŸ¦œ Chatter</h1>

        <%- include("partials/flash") %>

        <form action="/signup" method="POST" class="auth-form">
          <div class="form-field">
            <input
              type="text"
              name="username"
              placeholder="Username"
              required
            />
          </div>
          <div class="form-field">
            <input type="email" name="email" placeholder="Email" required />
          </div>
          <div class="form-field">
            <input
              type="password"
              name="password"
              placeholder="Password"
              required
            />
          </div>
          <button type="submit">Sign Up</button>
        </form>

        <p class="switch-auth">
          Already have an account? <a href="/login">Log in</a>
        </p>
      </div>
    </div>

    <%- include("partials/footer") %>
  </body>
</html>
